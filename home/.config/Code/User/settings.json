{
    "editor.fontSize": 22,
    "terminal.integrated.fontSize": 18,
    "debug.console.fontSize": 20,
    // OSのクリップボードを利用する
    "vim.useSystemClipboard":true,
    // 検索結果をハイライトする
    "vim.hlsearch": true,
    // easymotionを有効化する
