{
    // フォント
    "editor.fontFamily": " 'Ricty','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 17,
    "terminal.integrated.fontSize": 17,
    "debug.console.fontSize": 17,

    // OSのクリップボードを利用する
    "vim.useSystemClipboard":true,

    // 検索結果をハイライトする
    "vim.hlsearch": true,

    // デフォルトシェルを変更
    "terminal.integrated.shell.linux": "zsh",

    // theme
    "workbench.colorTheme": "GitHub Dark",

    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    // ターミナルのレンダリング 
    "terminal.integrated.rendererType": "auto",

    "python.jediEnabled": false,

    // 改行コードをLF改行に変更
    "files.eol": "\n",
    
    // エンコードを推測して開く
    "files.autoGuessEncoding": true,

    // ミニマップを常時表示・表示している文字は正確にしない(パフォーマンスup)
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,



    "vspacecode.bindingOverrides": [
    
    ],

     // Vim easymotion is required for Jump menu - <SPC> j
    "vim.easymotion": true,
    "vim.easymotionKeys": "sdfghjkl",
    // Use system clipboard for vim
    // Trigger the main which key menu with in the active editor with vim
    // This cannot be put into keybindings.json because it will
    // create conflict with Vim.
    // https://github.com/stevenguh/spacecode/issues/3
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<space>"],
            "commands": ["vspacecode.space"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<space>"],
            "commands": ["vspacecode.space"]
        }
    ],
    "python.languageServer": "Microsoft",
    "hediet.vscode-drawio.local-storage": "",
}